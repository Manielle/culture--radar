# Culture Radar Environment Configuration

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://culture-radar.fr

# Database
DB_HOST=database
DB_NAME=culture_radar
DB_USER=culture_user
DB_PASSWORD=secure_password_change_me
DB_ROOT_PASSWORD=secure_root_password_change_me
DB_PORT=3306

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_me

# SSL
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/culture-radar.crt
SSL_KEY_PATH=/etc/nginx/ssl/culture-radar.key

# Security
SESSION_SECURE=true
SESSION_HTTPONLY=true
COOKIE_SECURE=true

# AI/ML Settings
AI_MODEL_PATH=/var/www/html/models
AI_TRAINING_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/culture-radar/app.log

# Email (if needed)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@culture-radar.fr
MAIL_FROM_NAME="Culture Radar"