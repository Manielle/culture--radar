{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "sed -i 's/Listen 80/Listen '${PORT}'/g' /etc/apache2/ports.conf && sed -i 's/*:80/*:'${PORT}'/g' /etc/apache2/sites-available/000-default.conf && apache2-foreground"
  }
}