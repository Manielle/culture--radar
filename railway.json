{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": {
    "jobs": [
      {
        "name": "Daily Events Scraping",
        "schedule": "0 6 * * *",
        "command": "php cron/scrape-events.php"
      },
      {
        "name": "Weekly Cleanup",
        "schedule": "0 3 * * 0",
        "command": "php cron/cleanup.php"
      },
      {
        "name": "Daily Report",
        "schedule": "0 9 * * *",
        "command": "php cron/daily-report.php"
      }
    ]
  }
}